
@{
    ViewBag.Title = "Hakkımızda ";
}

<!-- Page Header Start -->
<div class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <!-- Page Header Box Start -->
                <div class="page-header-box">
                    <h1 class="wow fadeInUp" data-cursor="-opaque">Hakkımızda</h1>
                    <nav class="wow fadeInUp" data-wow-delay="0.2s">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">anasayfa / </a></li>
                            <li class="breadcrumb-item active" aria-current="page">hakkımızda</li>
                        </ol>
                    </nav>
                </div>
                <!-- Page Header Box End -->
            </div>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- About Us Section Start -->
@Html.Partial("_AboutUsSectionPartialView")
<!-- About Us Section End -->
<!-- Our Approach Section Start -->
<div class="our-approach bg-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <!-- Approach Content Start -->
                <div class="approach-content">
                    <!-- Section Title Start -->
                    <div class="section-title">
                        <h3 class="wow fadeInUp">Yaklaşımımız</h3>
                        <h2 class="wow fadeInUp" data-wow-delay="0.2s" data-cursor="-opaque">
                            <span>Teknik Uzmanlık ve Dijital Çözümlerle</span>  İşinizi Güçlendiriyoruz</h2>
                    </div>
                    <!-- Section Title End -->
                    <!-- Approach Image Start -->
                    <div class="approach-image">
                        <figure class="image-anime reveal">
                            <img src="/temaDosyalar/images/approach-image.jpg" alt="">
                        </figure>
                    </div>
                    <!-- Approach Image End -->
                </div>
                <!-- Approach Content ENd -->
            </div>

            <div class="col-lg-6">
                <!-- Our Approach List Start -->
                <div class="our-approach-list">
                    <!-- Mission Vission Item Start -->
                    <div class="mission-vision-item wow fadeInUp">
                        <div class="icon-box">
                            <img src="/temaDosyalar/images/icon-mission.svg" alt="">
                        </div>
                        <div class="mission-vision-item-content">
                            <h3>Misyonumuz</h3>
                            <p>Bireysel ve kurumsal müşteriler için bilgisayar ve laptop teknik servis hizmetlerini hızlı, güvenilir ve şeffaf bir şekilde sunmak. Cihazların performansını artıran, sorunları kalıcı olarak çözen çözümler üretmek.</p>
                        </div>
                    </div>
                    <!-- Mission Vission Item End -->
                    <!-- Mission Vission Item Start -->
                    <div class="mission-vision-item wow fadeInUp" data-wow-delay="0.2s">
                        <div class="icon-box">
                            <img src="/temaDosyalar/images/icon-vision.svg" alt="">
                        </div>
                        <div class="mission-vision-item-content">
                            <h3>Vizyonumuz</h3>
                            <p>Teknik servis ve dijital çözümler alanında güvenilirliğiyle tercih edilen, işletmelerin ve bireysel kullanıcıların ilk başvurduğu teknoloji partneri olmak.</p>
                        </div>
                    </div>
                    <!-- Mission Vission Item End -->
                    <!-- Mission Vission Item Start -->
                    <div class="mission-vision-item wow fadeInUp" data-wow-delay="0.4s">
                        <div class="icon-box">
                            <img src="/temaDosyalar/images/icon-goal.svg" alt="">
                        </div>
                        <div class="mission-vision-item-content">
                            <h3>Hedefimiz</h3>
                            <p>Bilgisayar tamiri, yazılım desteği, web çözümleri ve teknik danışmanlık hizmetlerini tek noktada sunarak müşterilerimizin teknolojik süreçlerini sorunsuz ve verimli hale getirmek.</p>
                        </div>
                    </div>
                    <!-- Mission Vission Item End -->
                </div>
                <!-- Our Approach List End -->
            </div>
        </div>
    </div>
</div>
<!-- Our Approach Section End -->
<!-- Our Features Section Start -->
@Html.Partial("_OzelliklerSectionView")

<!-- Our Features Section End -->
<!-- Who We Are Section Start -->
@Html.Partial("_BizKimizDetayPartialView")
<!-- Who We Are Section End -->
<!-- Our Solutions Section Start -->
<div class="our-solutions">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <!-- Our Solution Image Start -->
                <div class="our-solution-image">
                    <figure class="image-anime reveal">
                        <img src="/temaDosyalar/images/solution-image.jpg" alt="">
                    </figure>
                </div>
                <!-- Our Solution Image End -->
            </div>

            <div class="col-lg-6">
                <!-- Our Solution Content Start -->
                <div class="our-solution-content">
                    <!-- Section Title Start -->
                    <div class="section-title">
                        <h3 class="wow fadeInUp">TEKNOLOJİ VE TEKNİK SERVİS ODAKLI </h3>
                        <h2 class="wow fadeInUp" data-wow-delay="0.2s" data-cursor="-opaque"><span>Güvenilir çözümlere</span> yönelik işbirlikçi bir yaklaşım</h2>
                        <p class="wow fadeInUp" data-wow-delay="0.4s">
                            Bilgisayar ve dijital çözümlerde en iyi sonucun, doğru analiz ve güçlü iş birliğiyle elde edildiğine inanıyoruz.
                            İstinye’de bireysel ve kurumsal müşterilerimizle yakın çalışarak kalıcı ve güvenilir çözümler sunuyoruz.
                        </p>
                    </div>
                    <!-- Section Title End -->
                    <!-- Solution Button Start -->
                    <div class="solution-button wow fadeInUp" data-wow-delay="0.6s">
                        <a href="/Page/AboutUs" class="btn-default">Daha fazla bilgi edinin</a>
                    </div>
                    <!-- Solution Button End -->
                    <!-- Solution Item List Start -->
                    <div class="solution-item-list wow fadeInUp" data-wow-delay="0.8s">
                        <!-- Solution Item Start -->
                        <div class="solution-item">
                            <div class="icon-box">
                                <img src="/temaDosyalar/images/icon-solution-1.svg" alt="">
                            </div>
                            <div class="solution-item-content">
                                <h3>🛠️ Bilgisayar Teknik Servis</h3>
                                <p>Bilgisayar ve laptoplar için arıza tespiti, bakım, onarım ve performans iyileştirme hizmetleri sunuyoruz. Her marka cihaz için hızlı ve güvenilir çözümler üretiyoruz.</p>
                            </div>
                        </div>
                        <!-- Solution Item End -->
                        <!-- Solution Item Start -->
                        <div class="solution-item">
                            <div class="icon-box">
                                <img src="/temaDosyalar/images/icon-solution-2.svg" alt="">
                            </div>
                            <div class="solution-item-content">
                                <h3>💻 Web & Yazılım Çözümleri</h3>
                                <p>Kurumsal web siteleri, yazılım altyapıları ve dijital çözümlerle işletmelerin dijital dünyada güçlü ve sürdürülebilir bir yapı kurmasını sağlıyoruz.</p>
                            </div>
                        </div>
                        <!-- Solution Item End -->
                    </div>
                    <!-- Solution Item List End -->
                </div>
                <!-- Our Solution Content End -->
            </div>
        </div>
    </div>
</div>
<!-- Our Solutions Section End -->


