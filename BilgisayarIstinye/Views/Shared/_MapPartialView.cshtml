
<div class="col-lg-12">
    <!-- Contact Us Form Start -->
    <div class="conatct-us-form">
        <!-- Google Map Iframe Start -->
        <div class="google-map-iframe order-lg-1 order-2">
            <iframe src="https://www.google.com/maps/place//data=!4m2!3m1!1s0x14cacbdec7482aab:0x25dc76a3fab815b6?sa=X&ved=1t:8290&ictx=111" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <!-- Google Map Iframe End -->
        <!-- Contact Form Start -->
        <div class="contact-form order-lg-2 order-1">
            <!-- Section Title Start -->
            <div class="section-title">
                <h3 class="wow fadeInUp">Bize ulaşın</h3>
                <h2 class="wow fadeInUp" data-wow-delay="0.2s" data-cursor="-opaque">Bize bir <span>mesaj </span>gönderin</h2>
            </div>
            <!-- Section Title End -->
            <!-- Contact Form Start -->
            @using (Html.BeginForm("EMailSender", "Page", FormMethod.Post, new { @name = "myForm" })) { 
        <div class="row">
            <div class="form-group col-md-6 mb-4">
                <input type="text" name="fname" class="form-control" id="fName" placeholder="İsim" required>
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group col-md-6 mb-4">
                <input type="text" name="lname" class="form-control" id="lName" placeholder="Soyisim" required>
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group col-md-6 mb-4">
                <input type="text" name="telefon" class="form-control" id="phone" placeholder="Telefon" required>
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group col-md-6 mb-4">
                <input type="email" name="sendMailAdress" class="form-control" id="email" placeholder="Email Adres" required>
                <div class="help-block with-errors"></div>
            </div>

            <div class="form-group col-md-12 mb-5">
                <textarea name="body" class="form-control" id="message" rows="4" placeholder="Mesaj..."></textarea>
                <div class="help-block with-errors"></div>
            </div>

            <div class="col-lg-12">
                <div class="contact-form-btn">
                    <button name="submit" type="submit" class="btn-default"><span>şimdi gönder</span></button>
                    <div id="msgSubmit" class="h3 hidden"></div>
                </div>
            </div>
        </div>
            }
            <!-- Contact Form End -->
        </div>
        <!-- Contact Form End -->
    </div>
    <!-- Contact Us Form End -->
</div>